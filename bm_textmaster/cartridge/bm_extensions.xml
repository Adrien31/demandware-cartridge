<?xml version="1.0" encoding="ISO-8859-1" ?>
<extensions xmlns="http://www.demandware.com/xml/bmmodules/2007-12-11" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.demandware.com/xml/bmmodules/2007-12-11 bmext.xsd">
	<menuitem id="textmastermenuitem1" position="99999" site="true">
		<name xml:lang="x-default">TextMaster</name>
		<short_description xml:lang="x-default">
			TextMaster Translation
		</short_description>
		<description xml:lang="x-default">
			TextMaster Translation tools
		</description>
		<icon>icons/textmaster-small.png</icon>
	</menuitem>

	<menuaction id="textmastermenumenuaction1" menupath="textmastermenuitem1" position="999" site="true">
		<name xml:lang="x-default">New Translation Project</name>
		<short_description xml:lang="x-default">
			New translation project
		</short_description>
		<description xml:lang="x-default">
			Start a new translation project
		</description>
		<exec pipeline="Translation" node="New"/>
		<sub-pipelines>
			<pipeline name="Translation-New" />
			<pipeline name="Translation-PlaceOrder" />
			<pipeline name="Translation-Notification" />
			<pipeline name="Components-ItemList" />
			<pipeline name="Components-CategoryDropdown" />
			<pipeline name="Components-AttributeList" />
			<pipeline name="Components-GetTemplatesResponse" />
			<pipeline name="Components-CreateTranslation" />
			<pipeline name="Components-GetLanguageToList" />
			<pipeline name="Components-FilterInputs" />
		</sub-pipelines>
		<icon>icons/tm_new_project.gif</icon>
	</menuaction>
	
	<menuaction id="textmastermenumenuaction2" menupath="textmastermenuitem1" position="1000" site="true">
		<name xml:lang="x-default">Translation Dashboard</name>
		<short_description xml:lang="x-default">
			Follow up on translations
		</short_description>
		<description xml:lang="x-default">
			Follow up on translations
		</description>
		<exec pipeline="Translation" node="FollowUp"/>
		<sub-pipelines>
			<pipeline name="Translation-FollowUp" />
		</sub-pipelines>
		<icon>icons/tm_dashboard.gif</icon>
	</menuaction>
	
	<menuaction id="textmastermenumenuaction3" menupath="textmastermenuitem1" position="1001" site="true">
		<name xml:lang="x-default">Attribute Setup</name>
		<short_description xml:lang="x-default">
			Default attributes settings
		</short_description>
		<description xml:lang="x-default">
			Set attributes those are need to be translated frequently
		</description>
		<exec pipeline="Translation" node="DefaultAttributes"/>
		<sub-pipelines>
			<pipeline name="Translation-DefaultAttributes" />
			<pipeline name="Components-AttributeList" />
			<pipeline name="Components-SaveDefaultAttributes" />
		</sub-pipelines>
		<icon>icons/tm_attribute_setup.gif</icon>
	</menuaction>
	
	<menuaction id="textmastermenumenuaction4" menupath="textmastermenuitem1" position="1002" site="true">
		<name xml:lang="x-default">API Setup</name>
		<short_description xml:lang="x-default">
			Register new account in TextMaster
		</short_description>
		<description xml:lang="x-default">
			Go to TextMaster and create new account to use the translation feature
		</description>
		<exec pipeline="Translation" node="Register"/>
		<sub-pipelines>
			<pipeline name="Translation-Register" />
			<pipeline name="Components-SaveAPIConfigurations" />
		</sub-pipelines>
		<icon>icons/tm_api_setup.gif</icon>
	</menuaction>
</extensions>